[global]
runtime=180
group_reporting=1
norandommap=1

[fio_test_file]
directory=/mnt/fio_bench
bs={{ item.blocksize | default("16k") }}
rw={{ item.rw | default("randwrite") }}
direct=1
size=1G
numjobs={{ item.numjobs | default(16) }}
iodepth={{ item.iodepth | default(1) }}
time_based=1
per_job_logs=0
write_bw_log=/opt/ceph_bench/logs/{{ item.name }}.${TIMESTAMP}
write_iops_log=/opt/ceph_bench/logs/{{ item.name }}.${TIMESTAMP}
write_lat_log=/opt/ceph_bench/logs/{{ item.name }}.${TIMESTAMP}
