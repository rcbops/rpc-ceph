rbdname=bench_direct_RBD-{{ inventory_hostname_short }}
{% else %}
filename={{ bench_direct_device_name }}
direct=1
{% endif %}
iodepth={{ item.iodepth | default(8) }}
numjobs={{ item.numjobs | default(1) }}
do_verify=0
rw=read
rwmixread=100
rwmixwrite=0
per_job_logs=0
write_bw_log=/opt/ceph_bench/logs/{{ item.name }}.${TIMESTAMP}
write_iops_log=/opt/ceph_bench/logs/{{ item.name }}.${TIMESTAMP}
write_lat_log=/opt/ceph_bench/logs/{{ item.name }}.${TIMESTAMP}
